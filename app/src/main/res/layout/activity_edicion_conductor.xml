<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EdicionConductorActivity">

    <Toolbar
        android:id="@+id/toolbar_principal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/header"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/fondo"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/btnVolver"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar_principal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_volver"
        />
    <TextView
        android:id="@+id/tvDatosPersonales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnVolver"
        android:textAlignment="center"
        android:text="Datos Personales"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvNombreColaborador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDatosPersonales"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Nombre:"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombreColaborador"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Norma Isabel"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvApPaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNombre"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Apellido Paterno:"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etApPaterno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvApPaterno"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Torales"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvApMaterno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etApPaterno"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Apellido Materno:"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etApMaterno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvApMaterno"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Quintana"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvCurp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etApMaterno"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="CURP:"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etCurp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCurp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="TOQN901223MVZEHE2"
        android:maxLength="18"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvNoLicencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCurp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="NÃºmero de Licencia:"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etLicencia"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNoLicencia"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:maxLength="14"
        android:text="LNC00000000"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etLicencia"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Correo:"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCorreo"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="correoPacket@gmail.com"
        android:textSize="15dp"
        />
    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCorreo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/botones"
        android:text="Aceptar"
        android:textSize="25dp"
        />

</RelativeLayout>