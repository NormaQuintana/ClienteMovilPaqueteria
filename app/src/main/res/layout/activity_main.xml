<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/fondo"
    tools:context=".MainActivity">

    <Toolbar
        android:id="@+id/toolbar_principal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/header"
        />
    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_menu3"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Packet World"
        android:textSize="30dp"
        android:textColor="@color/fondo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFotoPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/toolbar_principal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/perfil_vacio"
        android:scaleType="centerCrop"
        app:strokeWidth="2dp"
        app:strokeColor="@color/texto"
        app:shapeAppearanceOverlay="@style/Circular" />
    <ImageView
        android:id="@+id/ivSeleccionarFoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="65dp"
        android:src="@drawable/ic_foto"
        />
    <TextView
        android:id="@+id/tvHola"
        android:layout_below="@id/toolbar_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola!"
        android:layout_marginTop="30dp"
        android:layout_marginStart="170dp"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHola"
        android:layout_marginTop="10dp"
        android:layout_marginStart="170dp"
        android:text="Norma Isabel"
        android:textColor="@color/texto"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvLicencia"
        android:layout_below="@id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Licencia:"
        android:layout_marginTop="30dp"
        android:layout_marginStart="170dp"
        android:textSize="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvLicenciaConductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLicencia"
        android:layout_marginTop="5dp"
        android:layout_marginStart="170dp"
        android:text="LICN123456"
        android:textColor="@color/texto"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/tvEnvio"
        android:layout_below="@id/tvLicencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Envios asignados:"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btnListaEnvio"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_below="@id/tvEnvio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Ver lista de envios"
        android:textSize="25dp"
        android:backgroundTint="@color/botones"
        />

</RelativeLayout>